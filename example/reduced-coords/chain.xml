      <RevoluteJoint id="q7" q="0" qd="0" location="0 -30 0" inboard-link-id="l6" outboard-link-id="l7" axis="0 0 1" />
      <RevoluteJoint id="q8" q="0" qd="0" location="0 -35 0" inboard-link-id="l7" outboard-link-id="l8" axis="0 0 1" />
