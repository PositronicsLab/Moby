<!-- A box just sitting on the ground.  -->

<XML>
  <DRIVER>
    <camera position="0 0 10" target="0 0 0" up="0 1 0" />
    <window location="0 0" size="640 480" />
  </DRIVER>

  <MOBY>
    <!-- Primitives -->
    <Box id="b1" xlen="1" ylen="1" zlen="1" density="1.0" edge-sample-length="1" />
    <Box id="b2" position="0 0 0" xlen="1" ylen="1" zlen="1" density="1.0" edge-sample-length="1" />
    <Plane id="b3"  />

    <!-- Integrator -->
    <RungeKuttaIntegrator id="rk4" />
    <BulirschStoerIntegrator id="bsi" />

    <!-- Gravity force -->
    <GravityForce id="gravity" accel="0 -9.81 0"  />

    <!-- Rigid bodies -->
      <!-- the box -->
      <RigidBody id="box" enabled="true" position="0 .5000 0" angular-velocity="0 1.00 0" visualization-id="b1" linear-velocity="0 0 0">
        <InertiaFromPrimitive primitive-id="b2" />
        <CollisionGeometry primitive-id="b1" />
      </RigidBody>

      <!-- the ground -->
      <RigidBody id="ground" enabled="false" visualization-id="b3" position="0 -0 0">
        <CollisionGeometry primitive-id="b3" />  
      </RigidBody>

    <!-- Setup the simulator -->
    <EventDrivenSimulator id="simulator" integrator-id="bsi" >
      <DynamicBody dynamic-body-id="box" />
      <DynamicBody dynamic-body-id="ground" />
      <RecurrentForce recurrent-force-id="gravity"  />
      <ContactParameters object1-id="ground" object2-id="box" epsilon="0" mu-coulomb="0" mu-viscous="0.1" friction-cone-edges="4" />
    </EventDrivenSimulator> 
  </MOBY>
</XML>

